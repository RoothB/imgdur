<h1>My Gallery</h1>
<body onload="drawszlider(30, 15);">
  <style>
  #szlider{
    width: 50%;
    height:15px;
    border:1px solid #000;
    overflow:hidden; }
#szliderbar{
    width:100%;
    height:15px;
    border-right: 1px solid #F20202;
    background: #d65946; }
#szazalek {
    color: #000000;
    font-size: 9px;
    font-style: italic;
    font-weight: bold;
    left: 25px;
    position: relative;
    top: -16px; }
    </style>
<ul>
  <% Image.all.each do |image| %>
	<center><li class="gallery">
	<%= image_tag(image.image(:medium)) %></li>
	<p>Name: <%= image.name %></p>
	<p>Description: <%= image.description%></p>
	<p>Rating: <%= image.rating%></p> 


<div id="szlider">
    <div id="szliderbar">
    </div>
    <div id="szazalek">
    </div>
</div>

  <button type="button" class="btn btn-med btn-info"><%= link_to("Mild", rating_path(vote: 1, image_id: image.id)) %></button>
    <button type="button" class="btn btn-med btn-warning"><%= link_to("Spicy", rating_path(vote: 2, image_id: image.id)) %></button>
    <button type="button" class="btn btn-med btn-danger"><%= link_to("Red Hot", rating_path(vote: 3, image_id: image.id)) %></button>
<br>
<br>
<br>
<% end %>
</ul>